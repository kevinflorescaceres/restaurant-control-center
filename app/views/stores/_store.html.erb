<div class="card" style="width: 30rem;">
    <%= image_tag store.photo_url, alt: store.name, class: 'card-img-top', height: 400 %>
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-2"> 
            <h5 class="card-title"><%= store.name %></h5>
            <h6 class="card-subtitle <%= status_color(store.status) %>"><%= store.status %></h6>
        </div>
      <p class="card-subtitle text-muted">Última actualización: <%= l(store.last_checked, format: :niu_format) %></p>
    </div>
    <ul class="list-group list-group-flush">
        <li class="list-group-item">
            <div class="d-inline-flex justify-content-between w-100">
                <div class="d-flex">
                    <span>Impresora: &nbsp</span>
                    <span class="<%= status_color(store.printer.status) %>"><%= store.printer.status %></span> 
                </div>
                <span class="fs-6 text-muted">(<%= l(store.printer.last_checked, format: :niu_format) %>)</span>
            </div>
        </li>
        <li class="list-group-item">
            <div class="d-inline-flex justify-content-between w-100">
                <div class="d-flex">
                    <span>Servidor web: &nbsp</span>
                    <span class="<%= status_color(store.web.status) %>"><%= store.web.status %></span> 
                </div>
                <span class="fs-6 text-muted">(<%= l(store.web.last_checked, format: :niu_format) %>)</span>
            </div>
        </li>
        <li class="list-group-item">
            <div class="d-inline-flex justify-content-between w-100">
                <div class="d-flex">
                    <span>Base de datos: &nbsp</span>
                    <span class="<%= status_color(store.database.status) %>"><%= store.database.status %></span> 
                </div>
                <span class="fs-6 text-muted">(<%= l(store.database.last_checked, format: :niu_format) %>)</span>
            </div>
        </li>
    </ul>
    <div class="card-body text-center">
        <%= link_to "Ir a #{store.short_name}", store.web.url, class: "btn #{color_button_main(store.short_name)}", target: "_blank" %>
    </div>
  </div>